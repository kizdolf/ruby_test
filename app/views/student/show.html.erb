<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:uid) %>:</strong></dt>
  <dd><%= @student.uid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cn) %>:</strong></dt>
  <dd><%= @student.cn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:uidNumber) %>:</strong></dt>
  <dd><%= @student.uidNumber %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture) %>:</strong></dt>
  <dd><%= @student.picture %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gidNumber) %>:</strong></dt>
  <dd><%= @student.gidNumber %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mail) %>:</strong></dt>
  <dd><%= @student.mail %></dd>
  <dt><strong><%= model_class.human_attribute_name(:firstName) %>:</strong></dt>
  <dd><%= @student.firstName %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastName) %>:</strong></dt>
  <dd><%= @student.lastName %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              student_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              student_path(@student),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
